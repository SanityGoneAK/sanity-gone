---
import { rawColors } from "../../theme.css";

interface Props {
  rarity: 1 | 2 | 3 | 4 | 5 | 6;
}

const { rarity } = Astro.props;
let fill = rawColors.neutrals.white;
if (rarity > 1) {
  fill = `url(#rarity${rarity})`;
}
---

<svg
  width="16.5"
  height="16"
  viewBox="0 0 16.5 16"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <path
    d="M2.90385 16L8.25 12.0962L13.6346 16L11.5385 9.88461L16.5 6.55769H10.4615L8.25 0L6.07692 6.55769H0L4.96154 9.88461L2.90385 16Z"
    fill={fill}></path>
</svg>
